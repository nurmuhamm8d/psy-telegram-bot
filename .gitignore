# Создаем правильный .gitignore
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
*.env*
*.bak
*.backup

# Database files
*.sqlite
*.sqlite-*
*.db
*.db-*
data/

# Export files
exports/

# Runtime data
*.log
logs/
pids/
*.pid
*.seed

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Build files
dist/
build/
coverage/

# Temporary files
tmp/
temp/
EOF

# Проверяем
cat .gitignore
